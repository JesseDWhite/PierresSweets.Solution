@{
  Layout = "_Layout";
}

@using PierresSweets.Models;

<h1>All Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet</h3>
}

<ul>
  @foreach (Flavor flavor in Model)
  {
    <p class="card flavor-card">@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</p>
  }
</ul>
<div class="button-group">
  <p>@Html.ActionLink("Add New Flavor", "Create","Flavors", null, new { @class = "btn btn-dark"})</p>
</div>