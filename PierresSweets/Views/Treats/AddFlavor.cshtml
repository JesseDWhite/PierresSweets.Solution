@{
  Layout = "_Layout";
}

@model PierresSweets.Models.Treat

<h2>Add a flavor</h2>

<h4>Add a flavor to: @Html.DisplayFor(model => model.TreatName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select A Flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Save" class="btn btn-success" />
}

<p>@Html.ActionLink("< Back to All Treats", "Index", "Treats", null, new { @class = "btn btn-dark mt-3"})</p>