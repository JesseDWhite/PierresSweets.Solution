<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Pierre's Sweets</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
    crossorigin="anonymous">
  <link rel="stylesheet" href="~/css/styles.css">
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark sticky-top" style="background-color: #606c38">
    <div class="container-fluid">
      <p class="navbar-brand">@Html.ActionLink("Pierre's Bakery", "Index", "Home")</p>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <p class="nav-link">@Html.ActionLink("Treats", "Index", "Treats")</p>
          </li>
          <li class="nav-item">
            <p class="nav-link">@Html.ActionLink("Flavors", "Index", "Flavors")</p>
          </li>
        </ul>
        <span class="navbar-text">
          @Html.ActionLink("My Account", "Index", "Account")
        </span>
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="card">
      @RenderBody()
      <footer>
        <div id="footer">~ Pierre's Sweet and Savory Treats ~</div>
      </footer>
    </div>
  </div>
</body>

</html>